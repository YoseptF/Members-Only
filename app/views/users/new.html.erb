<% if @user.errors.count > 0 %>
  <% @user.errors.full_messages.each do |error| %>
    <span><%= error %></span>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
<%= f.label :username, "Username" %>
<%= f.text_field :username %>
<%= f.label :email, "Email" %>
<%= f.email_field :email %>
<%= f.label :password, "password" %>
<%= f.password_field :password %>
<%= f.submit 'submit now' %>
<% end %>